  "main": "index.js",
  "dependencies": {
    "bunyan": "^0.22.1",
    "restify": "~4.0.3"
  },
  "devDependencies": {
  <% if (taskRunner === 'Grunt') { %>
    "grunt": "~0.4.1",
    <% if (useJSLint) { %>"grunt-jslint": "^1.1.12"<% }
    else { %>"grunt-contrib-jshint": "~0.6.3"<% } %>,
    "grunt-jasmine-nodejs": "^1.3.0"
  <% } else { %>
    "gulp": "^3.9.0",
    <% if (useJSLint) { %>"gulp-jslint": "^0.2.2"<% }
    else { %>"gulp-jshint": "^1.12.0"<% } %>,
    "gulp-jasmine": "^2.2.1"
  <% } %>
  },
  "scripts": {
    "test": <% if (taskRunner === 'Grunt') { %>"grunt"<% } else { %>"gulp"<% } %>
  }
}
